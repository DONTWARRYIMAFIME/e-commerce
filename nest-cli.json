{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {"include": "i18n/**/*"},
      {"include": "**/partials/**/*.hbs"},
      {"include": "**/partials/**/*.css"},
      {"include": "**/templates/**/*.hbs"},
      {"include": "**/templates/**/*.css"}
    ],
    "watchAssets": true
  }
}
